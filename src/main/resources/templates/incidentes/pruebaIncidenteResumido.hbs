    function initMap() {

        const map = new google.maps.Map(document.getElementById("map"), {
            zoom: 14,
            center:{ lat: 0, lng: 0 } ,
            fullscreenControl: false,
            zoomControl: true,
            streetViewControl: false
        });
        {{#each incidentes}}
            var incidentLocation = { lat: {{this.establecimiento.centroide.latitud}}, lng: {{this.establecimiento.centroide.longitud}} };
            new google.maps.Marker({
