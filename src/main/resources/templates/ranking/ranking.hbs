{{#partial "contenido" }}
<div class="container-sm mt-3">
    <div class="card mx-auto p-3" style="border-radius: 1rem; max-width:600px;">
        <div class="card-body">
        <h1 class="text-center mb-3">{{titulo}}</h1>
        <hr/>
        <table>
            <thead>
                <tr>
                    <th>Puesto</th>
                    <th style="text-align: right; width: 100%">Entidad</th>
                </tr>
            </thead>
            <tbody>
            {{#each ranking}}
                <tr>
                    <td>{{inc @index}}</td>
                    <td style="text-align: right; width: 100%">{{this.nombre}}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
        </div>
    </div>
</div>
{{/partial}}
{{> templates/base }}