{{#partial "contenido" }}
    <main class="container">
        <h1 class="main-title">Apertura de incidente</h1>
        <form action="/incidentes" method="POST">
            <div class="mb-3">
                <label for="prestacion" class="form-label tipografia-label">Prestaci√≥n de servicio</label>
                <select id="prestacion" name="prestacion" class="form-select" aria-label="Default select example">
                    <option selected>Open this select menu</option>
                    {{#each prestaciones}}
                        <option value="{{this.id}}">{{this.nombreServicio}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="mb-3">
                <label for="establecimiento" class="form-label tipografia-label">Establecimiento</label>
                <select id="establecimiento" name="establecimiento" class="form-select" aria-label="Default select example">
                    <option selected>Open this select menu</option>
                    {{#each establecimientos}}
                        <option value="{{this.id}}">{{this.nombre}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label tipografia-label" for="observaciones">Observaciones</label>
                <textarea id="oberservaciones" name="observaciones" class="form-control" placeholder="Escriba sus observaciones aqui..." rows="10" cols="50"></textarea>
            </div>

            <button type="submit" class="btn btn-success">Abrir nuevo incidente</button>
        </form>
        
    </main>
    

{{/partial}}
{{> templates/comunidades/incidentes/baseIncidentes  }}